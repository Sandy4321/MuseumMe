<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dtd.museumme" >


    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MuseumActivity"
            android:label="@string/app_name" >

        </activity>

        <activity
            android:name=".ExhibitActivity"
            android:label="ExhibitActivity">

            </activity>

        <activity
            android:name=".EnterKeyActivity"
            android:label="EnterKeyActivity">

        </activity>

        <activity
            android:name=".TabsActivity"
            android:label="MuseumsActivity">

        </activity>

        <activity
            android:theme="@style/NoActionTheme"
            android:name=".SplashScreen"
            android:label="Museum Me">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MuseumDescriptionActivity"
            android:label="MuseumDescriptionActivity">

        </activity>

    </application>

</manifest>
